{
  "name": "prime",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "emu": "npm run build -w server && npm run build:emu -w client  -- && firebase emulators:start --only functions,hosting",
    "wait:emu": "NODE_ENV=emu npx tsx scripts/waitEmu.ts",
    "e2e:emu": "NODE_ENV=emu cypress run --config-file cypress/cy.config.ts",
    "deploy": "npm run deploy --workspaces",
    "prepare": "husky",
    "lint": "eslint .",
    "prettier": "prettier --write \"client/**/*\" \"server/**/*\" ",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.5.0",
    "@firebase/functions-types": "^0.6.2",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/supertest": "^6.0.2",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.11.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "fast-check": "^3.19.0",
    "firebase-functions-test": "^3.1.0",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.15.6",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "overrides": {
    "protobufjs": "^7.3.0"
  }
}
